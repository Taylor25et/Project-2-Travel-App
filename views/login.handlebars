<main class="d-flex justify-content-center">
    <div class="log-container p-2 bg-light bg-opacity-10">
        <h1 class="text-center text-sm-start p-4 title-log">Log in</h1>
        <hr class="solid">
        <div class="container d-flex justify-content-center">
            <form class="pl-4">
                <div class="form-group row">
                    <label for="inputEmail" class="col-sm-3 col-form-label">Username</label>
                    <div class="col-sm-11">
                        <input type="email" class="form-control" id="inputEmail">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
                    <div class="col-sm-11">
                        <input type="password" class="form-control" id="inputPassword">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-11 d-flex justify-content-center p-3">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                    <div class="col text-right"><a class="sign-up" href="/signup">or sign up</a></div>
                </div>
            </form>
        </div>
    </div>
</main>