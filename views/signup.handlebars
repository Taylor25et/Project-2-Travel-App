<main class="d-flex justify-content-center">
    <div class="log-container p-2 bg-light">
        <h1 class="text-center text-sm-start p-4 font-signup">Sign up</h1>
        <hr class="solid">
        <div class="container">
            <form class="pt-2 pl-5" action="api/login/signup" method="post">
                <div class="form-group row">
                    <div class="col-sm-10 pl-4">
                        <input type="text" class="form-control" id="inputFirstName" name="firstname" placeholder="First Name">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 pl-4">
                        <input type="text" class="form-control" id="inputLastName" name="lastname" placeholder="Last Name">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="row">
                        <div class="col-sm-1 pt-2 pl-1"><i class="fa-solid fa-envelope fa-lg"></i></div>
                    </div>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Email">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="row">
                        <div class="col-sm-3 pt-2 pl-1"><i class="fa-solid fa-lock fa-lg"></i></div>
                    </div>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Password">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 d-flex justify-content-center p-3">
                        <button type="submit" class="btn btn-primary">Sign up</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>
